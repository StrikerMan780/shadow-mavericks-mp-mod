#define MENU_COUNT 20
#define MENU_XOFFSET 32.1
#define MENU_YOFFSET 32.1
#define MENU_YSPACING 10.0
#define MENU_BASEID 4800
int NewTauntselection[64];
int NumTaunts = Taunts;

function void TauntMenu_Draw(void)
{
	int pnum = playernumber();
	int yoffset = MENU_YOFFSET;
	int id = MENU_BASEID;
	
	SetHudSize(640, 400, 1);
	for(int i = NewTauntSelection[pnum]-(MENU_COUNT/2); i < NewTauntSelection[pnum]+(MENU_COUNT/2); i++)
	{
		if((i < 0) || i >= NumTaunts)
		{
			hudmessage(s:" ";
			HUDMSG_FADEOUT, id, CR_UNTRANSLATED, MENU_XOFFSET, yoffset, 2.0, 0.1);
		}
		else if(i == NewTauntSelection[pnum])
		{
			hudmessage(s:"\c[ElecViolet]Taunt ", d:i+1, s:": \cd", s:NewTaunt[i][1];
			HUDMSG_FADEOUT, id, CR_UNTRANSLATED, MENU_XOFFSET, yoffset, 2.0, 0.1);
		}
		else
		{
			hudmessage(s:"\ccTaunt ", d:i+1, s:": \cf", s:NewTaunt[i][1];
			HUDMSG_FADEOUT, id, CR_UNTRANSLATED, MENU_XOFFSET, yoffset, 2.0, 0.1);
		}
		
		yoffset += MENU_YSPACING;
		id++;
	}
}

script "TAUNT_SELECT" (int direction) NET
{
	if(direction == 1) // Next
	{
		NewTauntselection[playernumber()] = NewTauntselection[playernumber()] + 1;
		if(NewTauntselection[playernumber()] >= NumTaunts)
		{
			NewTauntselection[playernumber()] = 0;
		}
	}
	if(direction == 0) // Previous
	{
		NewTauntselection[playernumber()] = NewTauntselection[playernumber()] - 1;
		if(NewTauntselection[playernumber()] <= -1)
		{
			NewTauntselection[playernumber()] = NumTaunts-1;
		}
	}
	
	if(direction == 2) // Skip Ahead by 5
	{
	    If(NewTauntselection[playernumber()] != 0)
	    {
			NewTauntselection[playernumber()] = NewTauntselection[playernumber()] + 5;
	    }
		else If(NewTauntselection[playernumber()] == 0) // If at 0, skip by 4 to go to 5.
	    {
			NewTauntselection[playernumber()] = NewTauntselection[playernumber()] + 4;
		}
		
		if(NewTauntselection[playernumber()] >= NumTaunts)
		{
			NewTauntselection[playernumber()] = 0;
		}
	}
	if(direction == 3) // Skip Back by 5
	{
		NewTauntselection[playernumber()] = NewTauntselection[playernumber()] - 5;
		if(NewTauntselection[playernumber()] <= -1)
		{
			NewTauntselection[playernumber()] = NumTaunts-1;
		}
	}
	
	// Taunt Name Displays
	TauntMenu_Draw();
}

script "TAUNT_PLAY" (int tauntnumber) NET
{
	if(CheckInventory("TauntSpamProtection") > 0)
	{
		// Do Nothing.
	}
	else
	{
		GiveInventory("TauntSpamProtection", 1);
		
		if(tauntnumber != 0)
		{
			NewTauntselection[playernumber()] = tauntnumber-1;
		}
		
		AmbientSound(NewTaunt[NewTauntselection[playernumber()]][0], 127 );
		hudmessagebold(n:0, s:"\cc Sends Taunt #", d:NewTauntselection[playernumber()]+1;
		HUDMSG_TYPEON, 3, CR_GOLD, -0.02, 0.3, 1.0, 0.001, 1.0);
		Delay(35 * 3);
		TakeInventory("TauntSpamProtection", 1);
	}
}
